<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditBookActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Code"
        android:textSize="18sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editbook_edit_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0-7475-3269-9"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:gravity="start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Title"
        android:textSize="18sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editbook_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harry Potter"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:gravity="start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher"
        android:textSize="18sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editbook_edit_publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bloomsbury Publishing"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:gravity="start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="18sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editbook_edit_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="J.K. Rowling"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:gravity="start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year Release"
        android:textSize="18sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editbook_edit_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1997"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:inputType="number"
        android:gravity="start" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/editbook_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:backgroundTint="#F44336"
            android:layout_marginHorizontal="12dp"/>

        <Button
            android:id="@+id/editbook_btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:backgroundTint="#4CAF50"
            android:layout_marginHorizontal="12dp"/>

    </LinearLayout>

</LinearLayout>